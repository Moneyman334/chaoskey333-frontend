run = "vite"
entrypoint = "index.html"
hidden = [".config"]
modules = ["nodejs-18", "web"]

[nix]
channel = "stable-23_05"

[deployment]
deploymentTarget = "static"
publicDir = "public"
run = ["sh", "-c", ""]
build = ["sh", "-c", "npm run build"]

[[ports]]
localPort = 5173
externalPort = 80
exposeLocalhost = true

[workflows]
runButton = "Dev Server"

[[workflows.workflow]]
name = "Dev Server"
author = 40200880
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "vite"
