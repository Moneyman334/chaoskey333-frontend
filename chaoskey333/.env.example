# Multi-Channel Signal Pulse Configuration
# Copy this file to .env and configure with your actual API keys

# Watchtower Security
WATCHTOWER_HMAC_SECRET=your-hmac-secret-key-here
WATCHTOWER_AUTH_SECRET=your-auth-secret-for-api-here

# Vault Configuration
VAULT_BASE_URL=https://chaoskey333.web.app

# Stripe Configuration (already exists)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Twitter/X Integration (for auto-pulses)
TWITTER_ENABLED=true
TWITTER_CONSUMER_KEY=your-twitter-consumer-key
TWITTER_CONSUMER_SECRET=your-twitter-consumer-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret

# Email Integration (for nudges)
EMAIL_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS Integration (for alerts)
SMS_ENABLED=true
TWILIO_SID=your-twilio-account-sid
TWILIO_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# Optional: Vercel KV for production (if using Vercel deployment)
# KV_REST_API_URL=https://...
# KV_REST_API_TOKEN=...

# Original ThirdWeb config
NEXT_PUBLIC_TEMPLATE_CLIENT_ID=
